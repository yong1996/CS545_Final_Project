<section class="section bg-default">
  <div class="container d-flex">
      <div class="row">
        <div class="col-lg-6 py-sm">
          <h1 class="display-3  text-white">Welcome to Pet Owner Heper (POH)</h1>
          <p class="lead text-white">You are welcome to our pet owner heper community, you can post any questions you like.</p>
          <div class="btn-wrapper">
            <a href="/question" class="btn btn-white btn-icon mb-3 mb-sm-0">
              <span class="btn-inner--icon"><i class="ni ni-cloud-download-95"></i></span>
              <span class="btn-inner--text">View all Questions posted</span>
          </a>
          </div>
        </div>
        <div class="col-lg-6 d-none d-lg-block">
          <img src="/public/img/question/home-pets.png" class="img-fluid rounded" alt= "pets photo">
        </div>
      </div>
  </div>
</section>

<section class="section section-md">
  <div class="container">
    <div class="row justify-content-center text-center mb-sm">
      <div class="col-lg-10">
        <h1>You may interested in</h1>
      </div>
    </div>
    <div class="row justify-content-center">
      {{#each popularQuestions}}
      <div class="col-6 col-md-3 mb-5 mb-lg-0">
        <div class="px-4">
          <a href="/question/{{_id}}">
            <div class="avatar-container">
                <img src="{{avatar}}" class="img-fluid avatar" alt="question avatar">                
            </div>
            <div class="pt-3 text-center">
              <h2 class="title">
                <span class="d-block mb-1">{{title}}</span>
              </h2>
            </div>
          </a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>

