<section class="section">
  <div class="container">
    <h1 class="mb-5">All questions</h1>
    <nav class="navbar navbar-light bg-light justify-content-between">
      <a class="navbar-brand">Search: </a>
      <form id="search-form" class="form-inline">
          <select id="search-pet" class="custom-select form-control" name="pet">
            <option value="none"> Choose Pet </option>
            {{#each petType}}
            <option value="{{this}}">{{this}}</option>
            {{/each}}
          </select>

          <select id="search-type" class="custom-select form-control" name="type">
            <option value="none"> Choose Type </option>
            <option value="Help">Help</option>
            <option value="Question">Question</option>
            <option value="Other">Other</option>
          </select>

          <input class="form-control mr-sm-2" id="search-zip" type="zip" placeholder="zip" aria-label="zip" name="zip" size="10">
          <input class="form-control mr-sm-2" id="search-title" type="text" placeholder="title" aria-label="title" name="title" size="20">
          <input class="form-control mr-sm-2" id="search-owner" type="text" placeholder="owner" aria-label="owner" name="owner" size="20">
        <button id="search-form-button" type="submit" class="btn btn-primary">Search</button>
        {{!-- <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button> --}}
      </form>
    </nav>

    <div class="row">
      {{#each questions}}
      <div class="col-lg-3 col-md-4 col-6 mb-4">
          <div class="card">
              <a href="/question/{{_id}}" >
                <div class="avatar-container">
                  {{#if avatar}}
                  <img src="{{ avatar }}" class="card-img-top" alt="dog avatar">
                  {{else}}
                  <img src="/public/img/avatar/default-question.png" class="card-img-top" alt="dog avatar">
                  {{/if}}
                </div>
                <div class="card-body">
                    <h2 class="display-4">{{title}}</h2>
                    <p class="card-text"><span class="card-text-pet">{{pet}}</span> {{type}}</p>
                </div>
              </a>
          </div>
      </div>    
      {{/each}}
    </div>
    {{#pagination totalPage currentPage}}
    <nav>
      <ul class="pagination justify-content-center">
        {{#if @previousPage}}
        <li class="page-item">
          <a id="previous-page-link"class="page-link" href="?page={{@previousPage}}">
            <i class="fa fa-angle-left"></i>
            <span class="sr-only ">Previous page</span>
          </a>
        </li>
        {{/if}}
        
        {{#paginationItem totalPage currentPage}}
        <li class="page-item {{@active}}"><a id="page-link-{{@page}}" class="page-link" href="?page={{@page}}" aria-label="go to page {{@page}}">{{@page}}</a></li>
        {{/paginationItem}}

        {{#if @nextPage}}
        <li class="page-item">
          <a id="next-page-link" class="page-link" href="?page={{@nextPage}}">
            <i class="fa fa-angle-right"></i>
            <span class="sr-only">Next page</span>
          </a>
        </li>
        {{/if}}
      </ul>
    </nav>
    {{/pagination}}
  </div>
</section>

{{#section 'script'}}
<script src="/public/js/pages/question_search.js"></script>
{{/section}}